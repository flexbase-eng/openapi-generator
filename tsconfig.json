{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "stripInternal": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noEmit": true
  },
  "include": ["src/**/*"]
}
