{
  "name": "cli",
  "version": "0.0.0",
  "description": "Open API code generator",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint --max-warnings=0",
    "format": "prettier --write '{src,tests}/**/*.{ts,json}'",
    "test": "tsc --p tests --noemit && vitest run",
    "test:ci": "vitest run --coverage ",
    "clean": "rimraf ./dist",
    "clean:all": "rimraf ./dist && rimraf ./node_modules"
  },
  "dependencies": {
    "parser": "workspace:*",
    "@flexbase/logger": "^3.0.1",
    "@readme/openapi-parser": "^2.6.0",
    "@stoplight/json-ref-resolver": "^3.1.6",
    "@stoplight/json-schema-ref-parser": "^10.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.10.0",
    "openapi-types": "^12.1.3",
    "path": "^0.12.7",
    "prettier": "^3.3.3",
    "useful-handlebars-helpers": "^0.12.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@repo/vite-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.9.0",
    "@types/prettier": "^3.0.0",
    "@types/uuid": "^10.0.0"
  }
}
