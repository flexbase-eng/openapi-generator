{
  "name": "@flexbase/openapi-generator",
  "version": "2.1.0",
  "description": "Open API v3 code generator",
  "author": {
    "name": "Flexbase Technologies",
    "email": "hello@flexbase.app",
    "url": "https://flexbase.app"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flexbase-eng/openapi-generator/issues"
  },
  "homepage": "https://github.com/flexbase-eng/openapi-generator#readme",
  "keywords": [
    "flexbase",
    "openapi",
    "generator"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flexbase-eng/openapi-generator.git"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "openapi-generator": "dist/index.js"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "is-ci || husky install",
    "lint": "eslint . --ext .ts,.tsx,.json --max-warnings=0",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md,json}'",
    "test": "vitest run --coverage",
    "test:ci": "vitest run --coverage --config vitest.ci.config.ts",
    "start": "node dist/index.js",
    "packr": "packr",
    "generate": "yarn start -o ./output/nestjs -t ./templates/nestjs/document.hbs -p ./templates/nestjs/**/*.hbs -d -i",
    "generate:express": "yarn start -o ./output/express -t ./templates/express/document.hbs -p ./templates/express/**/*.hbs -e .js -i",
    "generate:koa": "yarn start -o ./output/koa -t ./templates/koa/document.hbs -p ./templates/koa/**/*.hbs -i",
    "generate:client:typescript": "yarn start -o ./output/client/typescript -t ./templates/client/typescript/document.hbs -p ./templates/client/typescript/**/*.hbs -i",
    "start:petstore": "yarn generate ./tests/data/petstore.yaml -n petstore"
  },
  "dependencies": {
    "@flexbase/logger": "^1.4.3",
    "@readme/openapi-parser": "^2.5.0",
    "@stoplight/json-ref-resolver": "^3.1.5",
    "@stoplight/json-schema-ref-parser": "^9.2.2",
    "chalk": "^5.1.2",
    "commander": "^10.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.2",
    "handlebars": "^4.7.7",
    "highlight.js": "^11.7.0",
    "openapi-types": "^12.0.2",
    "path": "^0.12.7",
    "prettier": "^2.8.8",
    "useful-handlebars-helpers": "^0.12.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@flexbase/packr": "^1.2.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^18.16.1",
    "@types/prettier": "^2.6.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitest/coverage-istanbul": "^0.30.1",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "latest",
    "eslint-plugin-check-file": "2.2.0",
    "eslint-plugin-filenames-simple": "latest",
    "eslint-plugin-import": "latest",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.2",
    "semantic-release": "^21.0.0",
    "typescript": "^5.0.4",
    "vite": "4.3.3",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.30.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": "eslint --cache --fix --max-warnings=0",
    "src/**/*.{ts,tsx,css,json}": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 150,
    "overrides": [
      {
        "files": [
          "*.hbs"
        ],
        "options": {
          "singleQuote": false,
          "parser": "glimmer"
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "eslint-config-prettier"
    ],
    "overrides": [],
    "plugins": [
      "filenames-simple",
      "check-file",
      "import"
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "parsers": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        },
        "node": {
          "paths": [
            "src"
          ],
          "extensions": [
            ".js",
            ".ts",
            ".d.ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "check-file/folder-naming-convention": [
        "error",
        {
          "src/**/": "KEBAB_CASE",
          "tests/**/": "KEBAB_CASE",
          "cypress/**/": "KEBAB_CASE"
        }
      ],
      "filenames-simple/naming-convention": [
        "error",
        {
          "rule": "kebab-case"
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".github",
    ".vscode",
    "build",
    "scripts",
    "tests",
    "output"
  ],
  "release": {
    "branches": [
      "main",
      {
        "name": "*",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "message": "major*",
              "release": "major"
            },
            {
              "message": "feat*",
              "release": "minor"
            },
            {
              "message": "*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "packr": {
    "output": "output",
    "properties": [
      "name",
      "version",
      "description",
      "main",
      "module",
      "types",
      "homepage",
      "repository",
      "bugs",
      "author",
      "license",
      "dependencies",
      "type",
      "bin",
      "keywords"
    ],
    "include": [
      "dist",
      "templates",
      "README.md",
      "LICENSE",
      "yarn.lock"
    ]
  }
}
