{
  "name": "@flexbase/openapi-generator",
  "version": "3.0.1",
  "description": "Open API code generator",
  "author": {
    "name": "Flexbase Technologies",
    "email": "hello@flex.one",
    "url": "https://flex.one"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flexbase-eng/openapi-generator/issues"
  },
  "homepage": "https://github.com/flexbase-eng/openapi-generator#readme",
  "keywords": [
    "openapi",
    "swagger",
    "generator"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flexbase-eng/openapi-generator.git"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=20.8.1"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "openapi-generator": "dist/index.js"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "is-ci || husky install",
    "lint": "eslint src/** --max-warnings=0",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md,json}'",
    "test": "vitest run --coverage",
    "test:ci": "vitest run --coverage --config vitest.ci.config.ts",
    "start": "node --inspect --enable-source-maps ./dist/index.js",
    "packr": "packr"
  },
  "dependencies": {
    "@flexbase/logger": "^3.0.0",
    "@readme/openapi-parser": "^2.5.0",
    "@stoplight/json-ref-resolver": "^3.1.6",
    "@stoplight/json-schema-ref-parser": "^10.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.9.0",
    "openapi-types": "^12.1.3",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "useful-handlebars-helpers": "^0.12.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@flexbase/packr": "^1.2.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.12.7",
    "@types/prettier": "^3.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "9.0.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "semantic-release": "^23.0.8",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0",
    "vite": "5.2.8",
    "vite-plugin-dts": "^3.8.1",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": "eslint --cache --fix --max-warnings=0",
    "src/**/*.{ts,tsx,css,json}": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 150,
    "overrides": [
      {
        "files": [
          "*.hbs"
        ],
        "options": {
          "singleQuote": false,
          "parser": "glimmer"
        }
      }
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "*",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "message": "major*",
              "release": "major"
            },
            {
              "message": "feat*",
              "release": "minor"
            },
            {
              "message": "*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "packr": {
    "output": "output",
    "properties": [
      "name",
      "version",
      "description",
      "main",
      "module",
      "types",
      "homepage",
      "repository",
      "bugs",
      "author",
      "license",
      "dependencies",
      "type",
      "bin",
      "keywords"
    ],
    "include": [
      "dist",
      "templates",
      "README.md",
      "LICENSE",
      "yarn.lock"
    ]
  }
}
