{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "./**/*"
    ]
}