{{#each requests}}{{>reference location="#/components/requests/" modelSuffix="Requests" validatorSuffix="RequestsValidator"}}{{/each}}
{{#each parameters}}{{>reference location="#/components/parameters/" modelSuffix="Parameter" validatorSuffix="ParameterValidator"}}{{/each}}
{{#each pathParameters}}{{>reference location="#/components/pathParameters/" modelSuffix="PathParameter" validatorSuffix="PathParameterValidator"}}{{/each}}
{{#each headerParameters}}{{>reference location="#/components/headerParameters/" modelSuffix="HeaderParameter" validatorSuffix="HeaderParameterValidator"}}{{/each}}
{{#each queryParameters}}{{>reference location="#/components/queryParameters/" modelSuffix="QueryParameter" validatorSuffix="QueryParameterValidator"}}{{/each}}
