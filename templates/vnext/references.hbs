{{!-- first pass register all references --}}
{{#*inline "reference"}}
{{#registerReference . "models" location}}{{& modelPrefix}}{{& replace name (toRegex "(-|\.| )+" "g") "_"}}{{& modelSuffix}}{{/registerReference}}
{{#registerReference . "validators" location}}{{& validatorPrefix}}{{& replace name (toRegex "(-|\.| )+" "g") "_"}}{{& validatorSuffix}}{{/registerReference}}
{{/inline}}

{{#each models}}{{>reference location=(append "#/components/models/" @key) modelSuffix="Model" validatorSuffix="ModelValidator"}}{{/each}}
{{#each responses}}{{>reference location=(append "#/components/responses/" @key) modelSuffix="Response" validatorSuffix="ResponseValidator"}}{{/each}}
{{#each requests}}{{>reference location=(append "#/components/requests/" @key) modelSuffix="Request" validatorSuffix="RequestValidator"}}{{/each}}
{{#each parameters}}{{>reference location=(append "#/components/parameters/" @key) modelSuffix="Parameter" validatorSuffix="ParameterValidator"}}{{/each}}
{{#each pathParameters}}{{>reference location=(append "#/components/pathParameters/" @key) modelSuffix="PathParameter" validatorSuffix="PathParameterValidator"}}{{/each}}
{{#each headerParameters}}{{>reference location=(append "#/components/headerParameters/" @key) modelSuffix="HeaderParameter" validatorSuffix="HeaderParameterValidator"}}{{/each}}
{{#each queryParameters}}{{>reference location=(append "#/components/queryParameters/" @key) modelSuffix="QueryParameter" validatorSuffix="QueryParameterValidator"}}{{/each}}
{{#each cookieParameters}}{{>reference location=(append "#/components/cookieParameters/" @key) modelSuffix="CookieParameter" validatorSuffix="CookieParameterValidator"}}{{/each}}
