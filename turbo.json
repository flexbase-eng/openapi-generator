{
  "$schema": "https://turbo.build/schema.json",
  "cacheDir": ".turbo/cache",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "format": {},
    "test": {
      "dependsOn": ["build"]
    },
    "test:ci": {
      "dependsOn": ["build"]
    },
    "clean:bin": {
      "dependsOn": ["^clean:bin"]
    },
    "build:ci": {
      "dependsOn": ["clean:bin", "build"],
      "outputs": ["bin/**"]
    },
    "packr": {
      "dependsOn": ["^build:ci"]
    }
  }
}
