{
  "include": ["../platform/openapi/*.yaml"],
  "sharedTemplates": ["../platform/openapi/templates/*.hbs"],
  "generate": {
    "router.ts": {
      "target": "./output/{api}/router.ts",
      "template": "../platform/openapi/templates/router.hbs"
    },
    "index": {
      "target": "./output/{api}/{name}/generated/{name}.ts",
      "template": "../platform/openapi/templates/index.hbs"
    },
    "routes": {
      "target": "./output/{api}/{name}/generated/{name}.routes.ts",
      "template": "../platform/openapi/templates/routes.hbs"
    },
    "models": {
      "target": "./output/{api}/{name}/generated/{name}.models.ts",
      "template": "../platform/openapi/templates/models.hbs"
    },
    "validations": {
      "target": "./output/{api}/{name}/generated/{name}.validations.ts",
      "template": "../platform/openapi/templates/validations.hbs"
    }
  },
  "prettier": true,
  "tags": true,
  "flatten": true,
  "references": true,
  "debugPath": "./output/debug/{api}/"
}
